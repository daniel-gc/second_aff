<?xml version="1.0" encoding="UTF-8"?>
<!-- Don't forget to set system property -Dlog4j2.contextSelector=org.apache.logging.log4j.core.async.AsyncLoggerContextSelector 
	to make all loggers asynchronous. -->
<Configuration status="DEBUG">
	<Appenders>
		<Console name="LogToConsole" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
		<RollingFile name="LogToFile" fileName="logs/afiliacion.log"
			bufferedIO="true" ignoreExceptions="false"
			filePattern="logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
			<PatternLayout>
				<Pattern>%d [%t] %-5level %logger{36} - %msg%n</Pattern>
			</PatternLayout>
			<Policies>
				<SizeBasedTriggeringPolicy size="2MB" />
			</Policies>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Logger name="mx.pliis" level="debug" additivity="false">
			<AppenderRef ref="LogToFile" />
			<AppenderRef ref="LogToConsole" />
		</Logger>
		<Logger name="org.springframework.boot" level="error" additivity="false">
			<AppenderRef ref="LogToConsole" />
			<AppenderRef ref="LogToFile" />
		</Logger>
		<Logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" additivity="false">
			<AppenderRef ref="LogToConsole" />
			<AppenderRef ref="LogToFile" />
		</Logger>
				<!-- Log everything in hibernate -->
		<Logger name="org.hibernate" level="error" additivity="false">
			<AppenderRef ref="LogToConsole" />
			<AppenderRef ref="LogToFile" />
		</Logger>
		<!-- Log all SQL statements -->
		<Logger name="org.hibernate.SQL" level="debug"
			additivity="false">
			<AppenderRef ref="LogToConsole" />
			<AppenderRef ref="LogToFile" />
		</Logger>
		<Root level="error">
			<AppenderRef ref="LogToFile" />
			<AppenderRef ref="LogToConsole" />
		</Root>
	</Loggers>
</Configuration>
